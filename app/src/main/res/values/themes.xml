<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppDemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary_Red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    // circle image
    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    //text Bold
    <style name="TextAppearance.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNovaBold.otf</item>
        <item name="android:ellipsize">end</item>
    </style>


    //text Regular
    <style name="TextAppearance.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/ProximaNovaRegular.otf</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">23sp</item>
        <item name="fontPath">fonts/ProximaNovaBold.otf</item>
    </style>

    //bottom nav
    <style name="BottomNavigation">

        <item name="itemBackground">@color/bottom_navigation_background_color</item>
        <item name="itemTextColor">@color/bottom_navigation_content_color</item>
        <item name="itemIconTint">@color/bottom_navigation_content_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:textSize">14sp</item>

    </style>


</resources>